<p id="notice"><%= notice %></p>

<div>
  Matches: <%= @profile.votes_for.size %>
  <%= link_to "Match", like_profile_path(@profile), method: :put %>
  <%# link_to "Downvote", dislike_profile_path(@profile), method: :put %>
</div>


<p>
  <strong>Company name:</strong>
  <%= @profile.company_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @profile.description %>
</p>

<p>
  <strong>User position:</strong>
  <%= @profile.user_position %>
</p>

<p>
  <strong>Type of business:</strong>
  <%= @profile.type_of_business %>
</p>

<p>
  <strong>Category:</strong>
  <%= @profile.category %>
</p>

<p>
  <strong>City:</strong>
  <%= @profile.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @profile.state %>
</p>

<%= render 'comments/form' %>

<% @comments = Comment.where(:profile_id => @profile.id) %>
<% @comments.each do |c| %>
  <%= c.description %>
  <%= User.find(c.user_id).name %><br>
<% end %>

<p>
  <strong>Logo:</strong>
  <%= image_tag @profile.logo.to_s %>
</p>

<p>
  <strong>Background Image:</strong>
  <%= image_tag @profile.background_image.to_s %>
</p>

<%= render_shareable :buttons=> ['twitter', 'facebook', 'tumblr'] %>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
