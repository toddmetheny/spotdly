<p id="notice"><%= notice %></p>

<div style="<%= show_brand_background %>">
  <h2 id="description-show">
    <i class="fa fa-quote-left"></i><%= @profile.description %><i class="fa fa-quote-right"></i>
  </h2>

<div class="text-center match-stuff">
  <p><%= @profile.votes_for.size %> Matches</p>
  <div><%= link_to like_profile_path(@profile), method: :put, class: 'match-button' do %>
    <i class="fa fa-exchange">Match</i>
  <% end %>
  </div>
</div>

<div class="container">
  <div class="row profile-info">
    <div class="col-md-4">
      <h1><%= @profile.company_name %></h1>
      <p>
        <strong>Type of business:</strong>
        <%= @profile.type_of_business %>
      </p>
      <p>
        <strong>Category:</strong>
        <%= @profile.category %>
      </p>
      <p>
        <%= @profile.city %>, <%= @profile.state %>
      </p>
    </div>

    <div class="col-md-4 text-center">
      <p class="text-center">
        <%= image_tag @profile.logo.to_s, class: "logo-show" %>
      </p>
      <p>
        <h3>Brand Idea</h3>
         <%= @profile.brand_idea %>
      </p>
      <p>
        <h3>Slogan</h3>
        <%= @profile.slogan %>
      </p>
      <p>
        <h3>Description</h3>
        <%= @profile.long_description %>
      </p>

    </div>

    <div class="col-md-4 text-center">
      <h2 id="brand-tree">Online Brand Tree</h2>
      <ul class="list-unstyled">
        <li id="hashtag"><%= @profile.hashtag %></li>
        <li><a href="<%= @profile.url %>"><%= @profile.url %></a></li>
        <li><a href="<%= @profile.facebook %>"><%= @profile.facebook %></a></li>
        <li><a href="<%= @profile.twitter %>"><%= @profile.twitter %></a></li>
        <li><a href="<%= @profile.instagram %>"><%= @profile.instagram %></a></li>
      </ul>
    </div>

    <div class="col-md-12">
    <hr>
      <p>
        Share this:<%= social_share_button_tag(@profile.company_name) %>
      </p>
    </div>

    <div class="col-md-12">
    <hr>
      <% if current_user %>
        <%= render 'comments/form' %>
      <% else %>
        <%= link_to "Log in to leave a comment", new_user_session_path %>
      <% end %>

      <% @comments = Comment.where(:profile_id => @profile.id) %>
      <% @comments.each do |c| %>
        <hr>
        <h4> <%= User.find(c.user_id).name %> says...</h4>
        <p><%= c.description %></p>
        <hr>
      <% end %>
    </div>

   </div>
  </div>
</div>



