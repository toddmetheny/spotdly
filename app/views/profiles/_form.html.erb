    <br>
    <%= f.text_field :city, placeholder: "city" %>
  </div>
  <div class="field">
    <%= f.select :state, options_for_select(@profile.us_states, "FL") %><br>
  </div>
  <div>
    <%= f.file_field :logo %>
  </div>
   <div>
    <%= f.file_field :background_image %>
