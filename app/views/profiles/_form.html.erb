<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form>
  <div class="form-group">
    <%= f.label "Name of Company" %>
    <%= f.text_field :company_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Brand Concept: Describe your Brand concept in 100 characters" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Background Image: Background images must be in PNG, GIF, or JPG format" %>
    <%= f.file_field :background_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Logo' %>
    <%= f.file_field :logo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Brain Idea: The feature, product or service that makes you unique and everyone talks about. From 2 to 4 words." %>
    <%= f.text_field :brand_idea, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Brand Slogan: A short and striking phrase to sell your brand or idea.' %>
    <%= f.text_field :slogan, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Long Description: It's time to talk about the history of your brand. We recommend use a paragraph from 200 to 550 characters." %>
    <%= f.text_field :long_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Structure: Select the structure that best represents your company or personality' %><br>
    <%= f.select :type_of_business, options_for_select(Profile::STRUCTURES), class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= f.label 'City' %>
    <%= f.text_field :city, placeholder: "City", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'State' %>
    <%= f.select :state, options_for_select(@profile.us_states, "FL"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Hashtag' %>
    <%= f.text_field :hashtag, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Web Address - Example: https://spotdly.com' %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Facebook Address - Example: https://facebook.com/Spotdly' %>
    <%= f.text_field :facebook, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Twitter Address - Example: https://twitter.com/Spotdly' %>
    <%= f.text_field :twitter, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Instagram Address - Example: https://instagram.com/Spotdly' %>
    <%= f.text_field :instagram, class: "form-control" %>
  </div>

  <div class="actions submit-button">
    <%= f.submit 'Create A Brand Profile', class: 'btn btn-default' %>
  </div>


<% end %>
</form>
