  <div class="col-md-12 col-md-offset-3">
    <div class="edit-user text-center">
      <h2>Get Started. Simple and FREE.</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :name, "Your Name" %><br>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email, "Your Email Address" %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, "Create a Password" %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <%= render 'devise/registrations/terms_and_conditions' %>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-default", id: "new_user_submit" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
